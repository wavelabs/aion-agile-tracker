<div class="row">
  <div class="col col-login mx-auto">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'card'}) do |f| %>

    <% if flash[:alert] %>
      <div class="card-alert alert alert-danger mb-0">
        <%= flash[:alert] %>
      </div>
    <% end %>
    <div class="card-body p-6">
      <div class="card-title">Log in</div>

      <div class="form-group">
        <%= f.label :email, class: 'form-label' %>
        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: 'form-label' %>
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.label :remember_me, class: 'custom-control custom-checkbox' do %>
            <%= f.check_box :remember_me, class: 'custom-control-input' %>
            <span class="custom-control-label">Remember Me</span>
          <% end %>
        </div>
      <% end -%>

      <div class="form-footer">
        <%= f.submit "Log in", class: 'btn btn-primary btn-block' %>
      </div>

    </div>

    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
