<div class="row">
  <div class="col col-login mx-auto">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'card' }) do |f| %>
      <%= devise_error_messages! %>

      <div class="card-body p-6">
        <div class="card-title">Forgot your password?</div>

        <div class="form-group">
          <%= f.label :email, class: 'form-label' %><br />
          <%= f.email_field :email, autofocus: true, class: 'form-control' %>
        </div>

        <div class="form-footer">
          <%= f.submit "Send me reset password instructions", class: 'btn btn-primary btn-block' %>
        </div>
      </div>
  <% end %>
  <%= render "devise/shared/links" %>
  </div>
</div>
