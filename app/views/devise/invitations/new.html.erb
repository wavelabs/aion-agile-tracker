<h2><%= t "devise.invitations.new.header" %></h2>

<%= form_for resource, :as => resource_name, :url => account_user_invitations_path(@account), :html => {:method => :post, class: 'card'} do |f| %>
  <%= devise_error_messages! %>

  <div class="card-body">
    <% resource.class.invite_key_fields.each do |field| -%>
      <div class="form-group">
        <%= f.label field, class: 'form-label' %>
        <%= f.text_field field, class: 'form-control' %>
      </div>
    <% end -%>
  </div>

  <div class="card-footer text-right">
    <%= f.submit t("devise.invitations.new.submit_button"), class: 'btn btn-primary' %>
  </div>
<% end %>
