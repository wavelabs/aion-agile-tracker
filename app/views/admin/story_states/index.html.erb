<p id="notice"><%= notice %></p>

<h1>Story States</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Display name</th>
      <th>Icon</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @story_states.each do |story_state| %>
      <tr>
        <td><%= story_state.name %></td>
        <td><%= story_state.display_name %></td>
        <td><%= story_state.icon %></td>
        <td><%= link_to 'Show', story_state %></td>
        <td><%= link_to 'Edit', edit_story_state_path(story_state) %></td>
        <td><%= link_to 'Destroy', story_state, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Story State', new_story_state_path %>
