<%= form_with(model: account, local: true, html: {class: 'card'}) do |form| %>
  <%= render 'admin/shared/model_card_error', model: account %>

  <div class="card-body">
    <div class="form-group">
      <%= form.label :name, class: 'form-label' %>
      <%= form.text_field :name, id: :account_name, class: 'form-control' %>
    </div>
  </div>

  <div class="card-footer text-right">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
