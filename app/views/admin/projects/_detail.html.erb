<fieldset>
  <legend>Detail</legend>
  <dl>
    <dt>Name:</dt>
    <dd><%= project.name %></dd>
    <dt>Description:</dt>
    <dd><%= project.description %></dd>
    <dt>Story States</dt>
    <dd><%= project.story_states.collect {|ss| ss.display_name }.join(' | ') %></dd>
    <dt>Story Types</dt>
    <dd><%= StoryType.all.collect {|st| st.display_name }.join(' | ') %></dd>
  </dl>
</fieldset>
