<fieldset>
  <legend>Tasks (<%= tasks.count %>)</legend>
  <table>
    <thead>
      <tr>
        <th>Date started</th>
        <th>Worked</th>
        <th>Billed</th>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <%= render collection: tasks, as: :task, partial: 'task' %>
    </tbody>
  </table>
</fieldset>
