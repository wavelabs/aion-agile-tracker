<tr class="<%= 'bg-success' if story.accepted? %>">
  <td style="width: 2%;"><i class="fa <%= icon_for_story_type story.story_type %>"></i></td>
  <td style="width: 2%;"><%= story.points if story.feature? %></td>
  <td>
    <%= link_to story.title, project_story_path(@project, story) %>
    (
      <% story.owners.each do |owner| %>
        <%= link_to owner.abbr, [@project, :stories, q: { owners_id_eq: owner.id }] %>
      <% end %>
    )
    </td>
  <td style="width: 30%;"><%= story_action_button(story) %></td>
</tr>
