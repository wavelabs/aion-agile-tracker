<div class="card Iteration <%= iteration_classes(iteration) %>" data-id="<%= iteration.id %>" id="Iteration-<%= iteration.id %>">
  <div class="table-responsive">
    <table class="table card-table">
      <thead>
        <tr>
          <th colspan="5">
            <a href="" class="Iteration-collapsable-button" data-toggle="iteration-collapse">
              <i class="fa fa-caret-down"></i>
            </a>
            <small>
              <%= iteration.number %> -
              <%= render 'admin/projects/iteration_dates_form', iteration: iteration %> - <%= "#{iteration.points_done} of #{iteration.total_points}" %> - Velocity <%= iteration.velocity %>

            </small>
          </th>
        </tr>
      </thead>
      <tbody>
        <tr class="Iteration-toggle-accepted-row Iteration-accepted-stories-row">
          <td colspan="5">Accepted Stories: <%= iteration.count_story_done %></td>
        </tr>
        <tr class="Iteration-toggle-accepted-row Iteration-hide-accepted-stories-row">
          <td colspan="5">Hide Accepted Stories: <%= iteration.count_story_done %></td>
        </tr>
        <%= render collection: iteration.stories.order(:position), as: :story, partial: 'admin/projects/story' %>
      </tbody>
    </table>
  </div>
</div>

