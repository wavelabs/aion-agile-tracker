<fieldset>
  <legend>Stories (<%= stories.count %>)</legend>
  <table>
    <thead>
      <tr>
        <th>Id</th>
        <th>Title/Description</th>
        <th>Points</th>
        <th>Requester</th>
        <th>Story Type</th>
        <th>State</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <%= render collection: stories, as: :story, partial: 'story' %>
    </tbody>
  </table>
</fieldset>
