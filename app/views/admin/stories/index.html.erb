<div class="page-header">
  <div class="page-title">
    Stories
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th colspan="5">
                <small>
                  <%= "#{@total_stories} stories, #{@points_done} of #{@total_points} pts" %></small>
              </th>
            </tr>
          </thead>
          <tbody>
            <% @stories.each do |story| %>
              <%= render 'admin/projects/story', story: story %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
