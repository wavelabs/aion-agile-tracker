<div class="row">
 <div class="col-md-12">
    <div class="x_panel">
      <div class="x_title">
        <h2>Projects</h2>
        <ul class="nav navbar-right panel_toolbox">
          <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
          </li>
          <li><a class="close-link"><i class="fa fa-close"></i></a>
          </li>
          <li><%= link_to 'New Project', new_project_path %></li>
        </ul>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">

        <!-- start project list -->
        <table class="table table-striped projects">
          <thead>
            <tr>
              <th style="width: 1%">#</th>
              <th style="width: 80%">Project Name</th>
              <th style="width: 20%">#Edit</th>
            </tr>
          </thead>
          <tbody>
            <% current_company.projects.each do |project| %>
              <tr>
                <td><%= project.id %></td>
                <td>
                  <a><%= project.name %></a>
                  <br>
                  <small>Created <%= project.created_at %></small>
                </td>
                <td>
                  <%= link_to '<i class="fa fa-folder"></i> View'.html_safe, project, class: 'btn btn-primary btn-xs' %>
                  <%= link_to '<i class="fa fa-pencil"></i> Edit'.html_safe, [:edit, project], class: 'btn btn-info btn-xs' %>
                  <%= link_to '<i class="fa fa-trash-o"></i> Delete'.html_safe, project, class: 'btn btn-danger btn-xs', method: :delete %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <!-- end project list -->
      </div>
    </div>
  </div>
</div>
